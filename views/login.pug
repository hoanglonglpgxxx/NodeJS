extends base

//- block append head
   
block content
    main.main 
        .login-form
            h2.heading-secondary.ma-bt-lg Log into your account
            form.form.form--login
                .form__group
                    label.form__label(for='email') Email address
                    input.form__input(type='email', id='email', name='email', placeholder='email@example.com', required, )
                .form__group.ma-bt-md
                    label.form__label(for='password') Password
                    input.form__input(type='password', id='password', name='password', placeholder='••••••••', required, minlength='8')
                label.error(style='display: none;')
                .form__group
                    button.btn.btn--green Log in