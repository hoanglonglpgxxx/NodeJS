header.header
    nav.nav.nav--tours
        a(href='/').nav__el All tours

    .header__logo
        img(src='/img/logo-white.png' alt='Mitstours logo')

    nav.nav.nav--user
        if user 
            a(href='/me').nav__el
                img.nav__user-img(src=`/img/users/${user.photo}`, alt='User photo')
                span= user.name.split(' ')[0]
            a(href='/logout').nav__el Log out
        else
            a(href='/login').nav__el Log in
            a.nav__el.nav__el--cta(href='#') Sign up